<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu_Daftar1">

    <ImageView
        android:id="@+id/IVdaftar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nama_slogan"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="95dp" />

    <TextView
        android:id="@+id/tvDaftar1"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:maxLines="2"
        android:text="Ayo bergabung bersama Shoum Home!"
        android:textAllCaps="false"
        android:textColor="@color/hitam"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="256dp" />

    <EditText
        android:id="@+id/et_email_daftar1"
        android:hint="E-mail"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:layout_width="347dp"
        android:layout_height="54dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="311dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/et_password_daftar1"
        android:layout_width="347dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Kata sandi"
        android:inputType="textPassword"
        android:textAllCaps="false"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="365dp" />

    <EditText
        android:id="@+id/et_ulangipassword"
        android:layout_width="346dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Ulangi kata sandi"
        android:inputType="textPassword"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="417dp" />

    <Button
        android:id="@+id/btn_kembali_daftar1"
        android:layout_width="152dp"
        android:layout_height="45dp"
        android:text="Kembali"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/warna_tulisan_button"
        android:background="@color/warna_background_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="575dp" />

    <Button
        android:id="@+id/btn_lanjut_daftar1"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/warna_tulisan_button"
        android:background="@color/warna_background_button"
        android:text="Lanjut"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="577dp" />

</androidx.constraintlayout.widget.ConstraintLayout>