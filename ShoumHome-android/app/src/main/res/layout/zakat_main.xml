<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activityHandler.zakatActivity"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btzakatfitrah"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Zakat Fitrah" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:text="PERHATIAN !\n \n Zakat yang dikeluarkan per anggota keluarga adalah yang \n
memenuhi syarat sebagai berikut : \n
1. Beragama Islam\n
2. Keadaan Merdeka (Tidak Menjadi Budak)\n
3. Baligh dan Berakal\n
\n
Zakat Fitrah ini wajib dibayarkan seorang Muslim Setahun Sekali\n
pada Awal atau Akhir Bulan Ramadhan.\n " />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="193dp"
        android:layout_height="40dp"
        android:text="Jumlah Anggota Keluarga : " />

    <EditText
        android:id="@+id/editText"
        android:layout_width="393dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="193dp"
        android:layout_height="40dp"
        android:text="Harga Beras            : " />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="393dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="193dp"
        android:layout_height="40dp"
        android:text="Bentuk Zakat            : " />

    <Spinner
        android:id="@+id/spjeniszakat"
        android:entries="@"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="Anda Perlu Membayar Zakat Fitrah Berupa Beras Sebanyak" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="393dp"
        android:layout_height="104dp" />


</LinearLayout>

