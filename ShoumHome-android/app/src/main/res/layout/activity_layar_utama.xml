<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activityHandler.LayarUtama">

    <ImageView
        android:id="@+id/IVlayarutama"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nama_slogan"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btnMasuk"
        android:onClick="masuk_ke_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bt_aksi"
        android:text="Masuk ke ShoumHoum!"
        android:textAllCaps="false"
        android:textColor="@color/warna_tulisan_button"
        tools:ignore="MissingConstraints"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="match_parent"
        android:onClick="masuk_ke_daftar"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bt_aksi"
        android:textColor="@color/warna_tulisan_button"
        android:text="Belum punya akun? Daftar disini!"
        tools:ignore="MissingConstraints" />

</LinearLayout>