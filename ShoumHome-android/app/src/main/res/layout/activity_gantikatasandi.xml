<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityHandler.GantiSandiActivity">

    <ImageView
        android:id="@+id/nama_slogan4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nama_slogan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <TextView
        android:id="@+id/textganti_sandi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_slogan4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="Ganti Kata Sandi Baru Sekarang"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="263dp" />

    <EditText
        android:id="@+id/etsandi"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/textganti_sandi"
        android:layout_centerHorizontal="true"
        android:hint="Kata Sandi"
        android:inputType="textPersonName"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="345dp" />

    <EditText
        android:id="@+id/etulang_sandi"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/etsandi"
        android:layout_centerHorizontal="true"
        android:hint="Ulangi Kata Sandi"
        android:inputType="textPersonName"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="419dp" />

    <Button
        android:id="@+id/btn_lanjut"
        android:layout_width="136dp"
        android:layout_height="43dp"
        android:layout_below="@id/etulang_sandi"
        android:backgroundTint="#00BFFF"
        android:fontFamily="sans-serif-light"
        android:text="Lanjut"
        android:textAllCaps="false"
        android:textColor="@color/wrnputih"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="555dp" />


</androidx.constraintlayout.widget.ConstraintLayout>