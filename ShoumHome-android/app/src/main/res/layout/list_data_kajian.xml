<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_data_kajian"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/Image_Judul"
        android:layout_width="382dp"
        android:layout_height="177dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/foto" />

    <TextView
        android:id="@+id/TextView_Judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Image_Judul"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Judul    : Menuju Ramadhan Penuh Berkah"
        android:textColor="@color/Judul"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_Ustadz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_Judul"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Ustadz : K.H Abdul Somad"
        android:textColor="@color/Judul"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_Ustadz"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Link      : "
        android:textColor="@color/Judul"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_Tanggal"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_Link"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="1 Februari 2020"
        android:textSize="12dp" />

</RelativeLayout>