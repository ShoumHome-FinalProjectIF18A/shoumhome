<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_data_kajian"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewFoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@android:drawable/presence_video_busy" />

    <TextView
        android:id="@+id/textViewJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/imageViewFoto"
        android:text="Meningkatkan Keimanan dalam Kemajuan Teknologi"
        android:layout_toRightOf="@+id/imageViewFoto"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textViewUstad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewJudul"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imageViewFoto"
        android:text="Ustadz Abdul Somad"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/imageViewFoto" />

    <TextView
        android:id="@+id/textViewLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUstad"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imageViewFoto"
        android:text="....."
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/imageViewFoto" />

</RelativeLayout>